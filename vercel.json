{
  "builds": [
    {
      "src": "api/build.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/whatsapp.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/health.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/api/whatsapp",
      "dest": "/api/whatsapp.js"
    },
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    }
  ],
  "functions": {
    "api/whatsapp.js": {
      "maxDuration": 60,
      "memory": 3008
    }
  }
}
